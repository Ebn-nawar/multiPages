extends layouts/main.pug
block meta
    include includes/meta.pug
block links
    - var path = "assets";
    include includes/links.pug
block title
    title Home
block header
    include includes/header.pug
block main
    // start of main
    main
        //- carousel section
        .main__carousel.container.my-4
            #carouselExampleControlsNoTouching.carousel.slide(data-bs-touch='false' data-bs-interval='false')
                .carousel-inner
                    .carousel-item.active
                        img.d-block.w-100.m-auto(src='https://images.unsplash.com/photo-1487014679447-9f8336841d58?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1905&q=80' alt='')
                    each alt in [1, 2, 3, 4, 5]
                        .carousel-item
                            img.d-block.w-100.m-auto(src='https://images.unsplash.com/photo-1487014679447-9f8336841d58?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1905&q=80' alt= alt)
                button.carousel-control-prev(type='button' data-bs-target='#carouselExampleControlsNoTouching' data-bs-slide='prev')
                    span.carousel-control-prev-icon(aria-hidden='true')
                    span.visually-hidden Previous
                button.carousel-control-next(type='button' data-bs-target='#carouselExampleControlsNoTouching' data-bs-slide='next')
                    span.carousel-control-next-icon(aria-hidden='true')
                    span.visually-hidden Next
        //- Top products 
        .main__topProduct.container
            .row
                each alt in [1, 2, 3, 4]
                    .col-6.col-md-3.text-center.my-1
                        img.w-100(src="http://demo.templatin.com/megashop17/modules/tptnsubbanner/images/sample-4.jpg" alt= alt srcset="")
        //- Top categories
        .main__categories.container.my-5
            each val in ["popular products", "New products"]
                h3.border-bottom.border-2.pb-2= val
                include includes/main__categories
        //- speacial products
        .main__speacial.container.my-5
            .row 
                .col-12.col-md-6.my-2
                    img(src="http://demo.templatin.com/megashop17/modules/tptnbotbanner/images/sample-1.jpg")
                .col-12.col-md-6.my-2
                    img(src="http://demo.templatin.com/megashop17/modules/tptnbotbanner/images/sample-2.jpg")  
        //- Categories
        .main__categories.container.my-5
            each val in ["speacial products", "Elctronic", "Clothes"]
                h3.border-bottom.border-2.pb-2= val
                include includes/main__categories
        //- Block
